<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.proys.proysrail.L4_isci_detay">

    <ImageView
        android:id="@+id/üstbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:srcCompat="@color/background" />

    <TextView
        android:id="@+id/isciadi"
        android:layout_marginTop="7dp"
        android:layout_marginStart="20dp"
        android:textColor="#444444"
        android:textSize="27sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tony" />

    <TextView
        android:id="@+id/imalat"
        android:textColor="#444444"
        android:layout_marginTop="2dp"
        android:layout_below="@id/isciadi"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="subbalast" />

    <TextView
        android:id="@+id/txtPuantaj"
        android:layout_below="@id/üstbar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#444444"
        android:textSize="21sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puantaj" />

    <TextView
        android:id="@+id/puantaj"
        android:layout_below="@id/üstbar"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:textColor="#444444"
        android:textSize="21sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10" />


    <ImageView
        android:id="@+id/onay"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/onay" />

    <ListView
        android:id="@+id/listview"
        android:layout_below="@id/puantaj"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
