<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <TextView
        android:id="@+id/ilerleme"

        android:layout_marginTop="12.7dp"
        android:layout_marginStart="12.3dp"
        android:textColor="@color/text_color"
        android:fontFamily="@font/opensans_regular"
        android:textSize="19.3sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Günlük İlerleme (18.09.2019)" />

    <TextView
        android:id="@+id/tarih"
        android:layout_below="@id/ilerleme"
        android:layout_marginTop="6dp"
        android:layout_marginStart="12.3dp"
        android:textColor="@color/text_color"
        android:fontFamily="@font/opensans_lightitalic"
        android:textSize="15.3sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Son Bildiri Tarihi : 19.09.2019 09.00" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="12.7dp"
        android:layout_below="@id/tarih"
        app:srcCompat="@color/text_color" />


</RelativeLayout>


