<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.proys.proysrail.L2_bildiri">

    <ImageView
        android:id="@+id/imageView110"
        android:layout_width="match_parent"
        android:layout_height="65.3dp"
        app:srcCompat="@color/background" />

    <TextView
        android:id="@+id/textView111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24.3dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/opensans_semibold"
        android:text="Günlük İlerleme"
        android:textColor="@color/text_color"
        android:textSize="27.8sp" />

    <TextView
        android:id="@+id/textView110"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-7dp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/opensans_lightitalic"
        android:textSize="16.7sp"
        android:textColor="@color/text_color"
        android:layout_below="@id/textView111"
        android:text="18.09.2019" />

    <ImageView
        android:id="@+id/sent"
        android:layout_alignParentEnd="true"

        android:layout_width="36dp"
        android:layout_height="26.3dp"
        android:layout_marginTop="16.7dp"
        android:layout_marginEnd="17.7dp"
        app:srcCompat="@drawable/yenisayfa" />
    <ImageView
        android:id="@+id/imageView113"
        android:layout_width="match_parent"
        android:layout_height="68.3dp"
        android:layout_below="@id/imageView110"
        app:srcCompat="@color/background2" />

    <TextView
        android:id="@+id/contur0"
        android:layout_alignBottom="@id/imageView110"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#a3a3a3"/>



    <LinearLayout
        android:background="@drawable/navbar_back"
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="69.7dp"
        android:layout_below="@id/imageView110"
        android:orientation="horizontal">
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/imalat_linear"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ilerleme"
                    android:id="@+id/imageImalat"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="39.7dp"
                    android:layout_weight="1"


                    />
                <TextView
                    android:layout_marginBottom="4.7dp"
                    android:layout_marginTop="4.7dp"
                    android:textSize="12.7sp"
                    android:id="@+id/imalat_txt"

                    android:fontFamily="@font/opensans_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İmalat"/>




            </LinearLayout>



            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/isgucu_linear"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageisci"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="39.7dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/is_gucu"

                    />

                <TextView
                    android:layout_marginBottom="4.7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.7dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="İş Gücü"
                    android:textSize="12.7sp"/>




            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/makine_linear"

                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageMakine"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="39.7dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/makine"

                    />
                <TextView
                    android:layout_marginBottom="4.7dp"
                    android:layout_marginTop="4.7dp"
                    android:textSize="12.7sp"
                    android:fontFamily="@font/opensans_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Makine"/>




            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/malzeme_linear"

                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageMalzeme"
                    android:layout_width="match_parent"
                    android:layout_height="39.7dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/malzeme"

                    />
                <TextView
                    android:layout_marginBottom="4.7dp"
                    android:layout_marginTop="4.7dp"
                    android:textSize="12.7sp"
                    android:fontFamily="@font/opensans_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Malzeme"/>




            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/aciklama_linear"

                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/notepad"
                    android:id="@+id/imageAciklama"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="39.7dp"
                    android:layout_weight="1"


                    />
                <TextView
                    android:layout_marginBottom="4.7dp"
                    android:layout_marginTop="4.7dp"
                    android:textSize="12.7sp"

                    android:fontFamily="@font/opensans_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Açıklama"/>




            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/medya_linear"

                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageCamera"
                    android:layout_width="match_parent"
                    android:layout_height="39.7dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:src="@drawable/camera"


                    />
                <TextView
                    android:layout_marginBottom="4.7dp"
                    android:layout_marginTop="4.7dp"
                    android:textSize="12.7sp"

                    android:fontFamily="@font/opensans_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medya"/>




            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/contur1"
     android:layout_alignBottom="@id/linear1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#a3a3a3"/>
    <ListView

        android:id="@+id/listview"
        android:layout_below="@id/contur1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>




    <ImageView
        android:id="@+id/imageView100"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/s_ol_alt_buton" />

    <ImageView
        android:id="@+id/imageView101"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/alt_more" />


</RelativeLayout>

















