<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="65dp"
    android:background="@color/background">
    <TextView
android:fontFamily="@font/opensans_semibold"
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15.3dp"
        android:layout_marginTop="5.3dp"
        android:text=" Makine İşletme"
        android:textColor="@color/text_color"
        android:textSize="27.8sp"

        />


    <TextView
        android:id="@+id/subtitle"
        android:layout_alignParentStart="true"
        android:layout_below="@id/main_title"
        android:layout_marginStart="29dp"
        android:layout_marginTop="-7dp"
        android:textColor="@color/text_color"
        android:fontFamily="@font/opensans_lightitalic"
        android:textSize="16.7sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18.09.2018 "

        android:letterSpacing="-0.01"/>

    <ImageView
        android:id="@+id/sent"
        android:layout_width="36dp"
        android:layout_height="26.3dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19.7dp"
        android:layout_marginEnd="14dp"
         android:src="@drawable/yenisayfa"/>
</RelativeLayout>